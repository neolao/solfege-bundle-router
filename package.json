{
    "name": "solfegejs-server-router",
    "description": "Router bundle of the SolfegeJS server",
    "version": "2.0.3",
    "author": "neolao <contact@neolao.com>",
    "repository": "https://github.com/neolao/solfege-bundle-router.git",
    "license": "MIT",
    "main": "lib/Bundle.js",
    "engines": {
        "node": ">=6"
    },
    "files": [
        "lib",
        "src",
        "interface.js"
    ],
    "peerDependencies": {
        "solfegejs": "2.x",
        "solfegejs-server": "2.x"
    },
    "dependencies": {
        "config-yaml": "^1.0.4",
        "is-generator": "^1.0.3",
        "easy-table": "^1.0",
        "colors": "^1.1"
    },
    "devDependencies": {
        "babel-cli": "^6.7",
        "babel-preset-solfege": "^1.0.1",
        "eslint": "^3.19",
        "eslint-plugin-solfege": "^1.0",
        "flow-bin": "^0.47",
        "gnomon": "^1.5.0",
        "solfegejs": "2.x",
        "solfegejs-server": "^2.1.6",
        "watch": "^1.0.2"
    },
    "scripts": {
        "flow-stop": "flow stop",
        "flow-start": "flow start",
        "flow-restart": "flow stop && flow start",
        "prepare": "npm run build",
        "lint": "eslint --ext .js src",
        "prebuild": "npm run lint && npm run flow-restart && flow",
        "build": "babel --out-dir lib src --copy-files",
        "watch": "watch 'echo \"----------\"; npm run build --silent | gnomon' ./src",
        "example-build": "flow; babel --out-dir example/lib example/src --copy-files",
        "example-start": "node example/start.js",
        "example-console": "node example/console.js"
    },
    "babel": {
        "presets": [
            "solfege"
        ],
        "comments": false
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:solfege/recommended"
        ]
    }
}
